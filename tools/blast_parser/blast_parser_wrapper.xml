<tool id="blast_parser_wrapper" name="blast_parser" version="0.1.1">
    <description>
        Convert 12- or 24-column BLAST output into 3-column hcluster_sg input
    </description>

    <command>
<![CDATA[
perl $__tool_directory__/blast_parser.pl
$input
> $output
]]>
    </command>

    <inputs>
        <param name="input" type="data" format="tabular" label="Tabular data" help="BLAST 12 column tabular format data"/>
    </inputs>

    <outputs>
        <data name="output" format="tabular" label="$tool.name on ${on_string}" />
    </outputs>

    <help>
<![CDATA[
Simple tool to convert a 12- or 24- column BLAST output into a 3-column hcluster_sg input.
]]>
    </help>
    <citations>
    </citations>
</tool>
